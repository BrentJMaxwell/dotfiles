# --- Personal Account ---
# Host alias: github.com
# This is the default, so standard 'git clone' works for personal stuff
Host github-personal
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_personal
    IdentitiesOnly yes

# --- SNX Work Account ---
# Host alias: github-snx
# We use a custom hostname alias to trigger the specific key
Host github-snx
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_snx
    IdentitiesOnly yes

# --- Servers ---
Host cyberpunk
    HostName cyberpunk.maxwell
    IdentityFile ~/.ssh/id_ed25519_personal

Host lattepandasigma
    HostName lattepandasigma.maxwell
    IdentityFile ~/.ssh/id_ed25519_personal

Host zimaboard
    HostName zimaboard.maxwell
    IdentityFile ~/.ssh/id_ed25519_personal

